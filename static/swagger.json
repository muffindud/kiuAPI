{
    "swagger": "2.0",
    "info": {
        "title": "KIU API",
        "description": "KIU API Documentation",
        "version": "1.0"
    },
    "host": "127.0.0.1:5000",
    "basePath": "/api/v1/",
    "schemes": [
        "http"
    ],
    "paths": {
        "/token": {
            "post": {
                "summary": "Get token with permissions",
                "parameters": [
                    {
                        "name": "Generate Token",
                        "in": "body",
                        "description": "Generate Token with permissions",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "password": {
                                    "type": "string",
                                    "default": "potato"
                                },
                                "read": {
                                    "type": "boolean",
                                    "default": true
                                },
                                "write": {
                                    "type": "boolean",
                                    "default": true
                                },
                                "delete": {
                                    "type": "boolean",
                                    "default": true
                                },
                                "update": {
                                    "type": "boolean",
                                    "default": true
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "access_token": {
                                    "type": "string",
                                    "description": "Access Token. Available for 15 minutes"
                                },
                                "refresh_token": {
                                    "type": "string",
                                    "description": "Refresh Token. Available for 30 days"
                                },
                                "permissions": {
                                    "type": "string",
                                    "description": "Permissions:\nR: Read\nW: Write\nD: Delete\nU: Update"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/refresh": {
            "get": {
                "summary": "Refresh token",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer token",
                        "required": true,
                        "type": "string",
                        "default": "Bearer "
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "access_token": {
                                    "type": "string",
                                    "description": "Access Token. Available for 15 minutes"
                                },
                                "permissions": {
                                    "type": "string",
                                    "description": "Permissions:\nR: Read\nW: Write\nD: Delete\nU: Update"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/queue": {
            "get": {
                "summary": "Get queues",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer token",
                        "required": true,
                        "type": "string",
                        "default": "Bearer "
                    },
                    {
                        "name": "id",
                        "in": "query",
                        "description": "Queue ID(s):\nEx: id=3 or id=[3, 4, 5]",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "start_id",
                        "in": "query",
                        "description": "Start ID",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "end_id",
                        "in": "query",
                        "description": "End ID",
                        "required": false,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "3": {
                                    "type": "object",
                                    "properties": {
                                        "description": {
                                            "type": "string",
                                            "example": "D4"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Q4"
                                        },
                                        "queue_list": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "1"
                                            },
                                            "example": [
                                                "1",
                                                "2"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create queue",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer token",
                        "required": true,
                        "type": "string",
                        "default": "Bearer "
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Queue objects that need to be added",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Queue name"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Queue description",
                                    },
                                    "queue_list": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        },
                                        "example": [
                                            "1",
                                            "2",
                                            "3",
                                            "4",
                                            "5",
                                            "6"
                                        ]
                                    }
                                },
                                "required": [
                                    "name",
                                    "queue_list"
                                ]
                            }
                        }
                    }
                ]
            }
        }
    }
}