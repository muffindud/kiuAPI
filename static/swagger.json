{
    "swagger": "2.0",
    "info": {
        "title": "KIU API",
        "description": "KIU API Documentation",
        "version": "1.0"
    },
    "host": "192.168.0.23:5000",
    "basePath": "/api/v1/",
    "schemes": [
        "http"
    ],
    "paths": {
        "/token": {
            "post": {
                "summary": "Get token with permissions",
                "parameters": [
                    {
                        "name": "Generate Token",
                        "in": "body",
                        "description": "Generate Token with permissions",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "password": {
                                    "type": "string",
                                    "default": "potato"
                                },
                                "read": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "write": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "delete": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "update": {
                                    "type": "boolean",
                                    "default": false
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "access_token": {
                                    "type": "string",
                                    "description": "Access Token. Available for 15 minutes"
                                },
                                "refresh_token": {
                                    "type": "string",
                                    "description": "Refresh Token. Available for 30 days"
                                },
                                "permissions": {
                                    "type": "string",
                                    "description": "Permissions:\nR: Read\nW: Write\nD: Delete\nU: Update"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/refresh": {
            "get": {
                "summary": "Refresh token",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer token",
                        "required": true,
                        "type": "string",
                        "default": "Bearer "
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "access_token": {
                                    "type": "string",
                                    "description": "Access Token. Available for 15 minutes"
                                },
                                "permissions": {
                                    "type": "string",
                                    "description": "Permissions:\nR: Read\nW: Write\nD: Delete\nU: Update"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "msg": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}